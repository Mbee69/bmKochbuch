<ScreenManagement>:
    MainWindow:
    EditSpeise:
    EditZutat:
    EditSpeiseZutat:

<Label>:

<MainWindow>:
    name: "main"

    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Kochbuch"
            right_action_items: [['plus', lambda x: app.add_new()],['dots-vertical', lambda x: app.tb_option_click()]]
        
        MDTabs:
            id: kochbuch_tabs
            on_tab_switch: app.on_tab_switch(*args)
            Tab:
                text: "Speisen"
                ScrollView:
                    MDList:
                        id: speisen_list

            Tab:
                text: "Zutaten"
                ScrollView:
                    MDList:
                        id: zutaten_list

<EditSpeise>:
    name: 'edit_speise'

    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Speise"
            left_action_items: [['backburger', lambda x: app.nav_main()]]
            right_action_items: [['plus', lambda x: app.add_new_speise_zutat()],['trash-can-outline', lambda x: app.del_current()],['dots-vertical', lambda x: app.tb_option_click()]]

        BoxLayout:
            size_hint: 1, 0.2
            background_color: "green"
            MDLabel:
                text: "A"
            TextInput:
                id:sp_name
                text: "B"
                
        BoxLayout:
            size_hint: 1, 0.2
            background_color: "red"
            MDLabel:
                text: "Guid"
            MDLabel:
                id: sp_guid
                text: "Guid"

        BoxLayout:
            ScrollView:
                MDList:
                    id: edit_speise_zutaten_list
        
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: "Save"
                size_hint: 1, 0.2
                on_release: app.save_speise()


